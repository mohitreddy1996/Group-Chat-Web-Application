<!DOCTYPE html>
<html>
    <head>
        <title>
            To Do Manager
        </title>
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">

        <!-- Important: you'll only need one of the Bootcards CSS files below for every platform -->

        <!-- Bootcards CSS for iOS: -->
        <!-- Bootcards CSS for Android: -->
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootcards/1.0.0/css/bootcards-android.min.css">

        <!-- Bootcards CSS for desktop: -->
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootcards/1.0.0/css/bootcards-desktop.min.css">

        <!-- Bootstrap and Bootcards JS -->
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/bootcards/1.0.0/js/bootcards.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
        <script src="javascripts/HomeApp.js"></script>
        <link href="stylesheets/simplegrid.css" rel="stylesheet">
        <link href="stylesheets/style.css" rel="stylesheet">
    </head>

    <body ng-app="MainHomeApp" ng-controller="MainHomeCtrl">
        <h2 align="center">Manage ToDos</h2>
        <br>
        <hr class="style18">

        <div>
            <h3 align="center">Project Work/External Projects/Knowledgeable things</h3>
            <hr class="style2">
            <div class="grid">
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">To Be Done Tasks</h4>
                        <div align="center" ng-repeat="project in projects">
                            <div class="card">
                                <div class="card-block">
                                    <h4><b>{{project.content}}</b></h4>
                                    <p>{{project.time | date:'yyyy-MM-dd'}}</p>
                                    <button type="submit" ng-click="markDone(project)">Done</button>
                                    <button type="submit" ng-click="removeItem(project)">Remove</button>
                                </div>
                            </div>
                            <!--{{project.content}} added on {{project.time | date:'yyyy-MM-dd'}}
                            <button type="submit" ng-click="markDone(project)">Done</button>
                            <button type="submit" ng-click="removeItem(project)">Remove</button>-->

                        </div>
                    </div>
                </div>
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">Done Tasks</h4>
                        <div align="center" ng-repeat="project in done_projects">
                            <div class="card">
                                <div class="card-block">
                                    <h4><b>{{project.content}}</b></h4>
                                    <p>{{project.time | date:'yyyy-MM-dd'}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br>
            <br>
            <div align="center">
                <form ng-submit="projectAdd()">
                    <input type="text" ng-model="project">
                    <button type="submit">Add work</button>
                </form>
            </div>
        </div>
        <br>
        <hr class="style18">

        <div>
            <h3 align="center">IEEE/WebClub Work</h3>
            <hr class="style2">
            <div class="grid">
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">To Be Done Tasks</h4>
                        <div align="center" ng-repeat="clubWork in clubWorks">
                            {{clubWork.content}} added on {{clubWork.time  | date:'yyyy-MM-dd'}}
                            <button type="submit" ng-click="markDone(clubWork)">Done</button>
                            <button type="submit" ng-click="removeItem(clubWork)">Remove</button>
                        </div>
                    </div>
                </div>
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">Done Tasks</h4>
                        <div align="center" ng-repeat="clubWork in done_clubWorks">
                            {{clubWork.content}} Done on {{clubWork.time  | date:'yyyy-MM-dd'}}
                        </div>
                    </div>
                </div>
            </div>

            <br>
            <div align="center">
                <form ng-submit="clubWorkAdd()">
                    <input type="text" ng-model="clubWork">
                    <button type="submit">Add Club work</button>
                </form>
            </div>
        </div>
        <br>
        <hr class="style18">

        <div>
            <h3 align="center">College Work/Assignments/Projects/Study</h3>
            <hr class="style2">
            <div class="grid">
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">To Be Done Tasks</h4>
                        <div align="center" ng-repeat="acadWork in acadWorks">
                            {{acadWork.content}} added on {{acadWork.time  | date:'yyyy-MM-dd'}}
                            <button type="submit" ng-click="markDone(acadWork)">Done</button>
                            <button type="submit" ng-click="removeItem(acadWork)">Remove</button>
                        </div>
                    </div>
                </div>
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">Done Tasks</h4>
                        <div align="center" ng-repeat="acadWork in done_acadWorks">
                            {{acadWork.content}} Done on {{acadWork.time  | date:'yyyy-MM-dd'}}
                        </div>
                    </div>
                </div>
            </div>


            <br>
            <div align="center">
                <form ng-submit="acadWorkAdd()">
                    <input type="text" ng-model="acadWork">
                    <button type="submit">Add Academic work</button>
                </form>
            </div>
        </div>
        <br>
        <hr class="style18">

        <div>
            <h3 align="center">Personal Life/Home/Divija/Friends</h3>
            <hr class="style2">
            <div class="grid">
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">To Be Done Tasks</h4>
                        <div align="center" ng-repeat="persWork in persWorks">
                            {{persWork.content}} added on {{persWork.time  | date:'yyyy-MM-dd'}}

                        </div>
                    </div>
                </div>
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">Done Tasks</h4>
                        <div align="center" ng-repeat="persWork in done_persWorks">
                            {{persWork.content}} Done on {{persWork.time  | date:'yyyy-MM-dd'}}

                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div align="center">
                <form ng-submit="persWorkAdd()">
                    <input type="text" ng-model="persWork">
                    <button type="submit">Add Personal work</button>
                </form>
            </div>
        </div>
        <br>
        <hr class="style18">

        <div>
            <h3 align="center">Others</h3>
            <hr class="style2">
            <div class="grid">
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">To be Done Tasks</h4>
                        <div align="center" ng-repeat="other in others">
                            {{other.content}} added on {{other.time  | date:'yyyy-MM-dd'}}
                            <button type="submit" ng-click="markDone(other)">Done</button>
                            <button type="submit" ng-click="removeItem(other)">Remove</button>
                        </div>
                    </div>
                </div>
                <div class="col-1-2">
                    <div class="content">
                        <h4 align="center">Done Tasks</h4>
                        <div align="center" ng-repeat="other in done_others">
                            {{other.content}} Done on {{other.time  | date:'yyyy-MM-dd'}}
                        </div>
                    </div>
                </div>
            </div>

            <br>
            <div align="center">
                <form ng-submit="otherAdd()">
                    <input type="text" ng-model="other">
                    <button type="submit">Add Other workswork</button>
                </form>
            </div>
        </div>

        <br>

        <hr class="style18">


    </body>
</html>