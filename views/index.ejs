<html>
<head>
    <title>Real Time Chatting Application</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="javascripts/app.js"></script>
</head>

<body ng-app="LoginPage" ng-controller="MainCtrl">
    <div>
        <h2>
            {{test}}
        </h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="form_bg">
                <form on-submit="confirmLogin()" method="post" name="login_form">
                    <h2 class="text-center">Login Page</h2>
                    <br/>
                    <div class="form-group">
                        <input ng-model="userId" type="text" class="form-control" name="userId" placeholder="User id">
                    </div>
                    <div class="form-group">
                        <input type="password" ng-model="userPasswrd" class="form-control" name="password" placeholder="Password">
                    </div>
                    <div class="align-center">
                        <button type="submit" class="btn btn-default" id="submit">Login</button>
                    </div>
                    <div class="align-left">
                        <a href="/register">Register Here.</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>
</html>